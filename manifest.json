{
  "name": "Chrome Translator",
  "version": "1.0",
  "description": "Translate you everything",
  "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "dist/index.html",
    "default_icon": {
      "16": "src/assets/get_started16.png",
      "32": "src/assets/get_started32.png",
      "48": "src/assets/get_started48.png",
      "128": "src/assets/get_started128.png"
    },
    "icons": {
      "16": "src/assets/get_started16.png",
      "32": "src/assets/get_started32.png",
      "48": "src/assets/get_started48.png",
      "128": "src/assets/get_started128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["dist/static/js/app.js"],
      "css": ["dist/static/css/app.css"]
    }
  ],
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "manifest_version": 2
}
